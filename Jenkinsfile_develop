pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "supriya2813/my-static-site" 
        PORT = "8081"
        CONTAINER_NAME = "develop-container"
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:latest ."
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                    sh "docker run -d --name ${CONTAINER_NAME} -p ${PORT}:80 ${DOCKER_IMAGE}:latest"
                }
            }
        }
        stage('Test Website Accessibility') {
            steps {
                sh "curl -I http://localhost:${PORT}"
            }
        }
        stage('Tag and Push Image') {
            steps {
                script {
                    sh "docker tag ${DOCKER_IMAGE}:latest ${DOCKER_IMAGE}:develop-${env.BUILD_ID}"
                    sh "docker push ${DOCKER_IMAGE}:latest"
                    sh "docker push ${DOCKER_IMAGE}:develop-${env.BUILD_ID}"
                }
            }
        }
    }
    post {
        always {
            echo "Pipeline completed."
        }
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}

